pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Assuming you have Maven installed and configured in your Jenkins environment.
                    sh 'mvn --version'
                    sh 'mvn clean package jib:build'
                }
            }
        }
    }
}
